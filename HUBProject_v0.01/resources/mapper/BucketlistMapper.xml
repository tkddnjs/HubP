<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hub.store.mapper.BucketlistMapper">
	<resultMap type="Bucketlist" id="bucketlistMap">
		<id property="bucketlistId" column="bucketId"/>
		<result property="title" column="title"/>
		<result property="goal" column="goal"/>
		<result property="star" column="star"/>
		<result property="progress" column="progress"/>
		<result property="memo" column="memo"/>
		<result property="sos" column="sos"/>
		<result property="progress" column="progress"/>
		<result property="lock" column="locker" typeHandler="BooleanToYnHandler"/>
		<result property="userId" column="userId"/>
		<collection property="connChains" column="bucketId" ofType="String" select="com.hub.store.mapper.BucketlistMapper.selectConnChainsByBucketlistId" javaType="ArrayList" jdbcType="NUMERIC"/>
	</resultMap>
	
	<sql id="selectBucketlist">
		SELECT bucketId, title, bucketId, goal, progress, star, memo, sos, locker, userId
		FROM bucketlist_tb
	</sql>

<!-- 	<insert id="insertBucketlist" parameterType="Bucketlist">
		INSERT INTO bucketlist_tb(bucketId, title, goal, star, memo, sos, locker, userId)
		VALUES (#{bucketlistId}, #{title}, #{goal}, #{star}, #{memo}, #{sos}, 'N', #{userId})
	</insert> -->
	
	<insert id="insertBucketlist" parameterType="Bucketlist">
		INSERT INTO bucketlist_tb(bucketId, title, goal, star, progress, sos, locker, userId)
		VALUES (#{bucketlistId}, #{title}, #{goal}, #{star}, #{progress}, #{sos}, 'N', #{userId})
	</insert>
	
	<insert id="insertBucketlistConn" parameterType="Map">
		INSERT INTO Bucketconn_tb(bucketId, connChain)
		VALUES (#{bucketId }, #{connChain})
	</insert>

	<update id="updateBucketlist" parameterType="Bucketlist">
		UPDATE bucketlist_tb
		SET title = #{title}, goal = #{goal}, star = #{star}, progress = #{progress}, memo = #{memo}, sos = #{sos},  userId = #{userId} 
		WHERE bucketId=#{bucketlistId}
	</update>
	<!-- locker = #{lock,typeHandler=BooleanToYnHandler}, -->

	<delete id="deleteBucketlist" parameterType="int">
		DELETE bucketlist_tb 
		WHERE bucketId=#{bucketlistId}
	</delete>

	<delete id="deleteBucketlistConn" parameterType="int">
		DELETE bucketConn_tb 
		WHERE bucketId=#{bucketlistId}
	</delete>

	<select id="nextBucketlistId" resultType="int">
		SELECT bucketlist_seq.nextval as bucketlistId
		FROM dual
	</select>
	
	<select id="selectAll" resultMap="bucketlistMap">
		<include refid="selectBucketlist" />
		WHERE userId=#{userId}
		ORDER BY bucketlist_tb.bucketId ASC
	</select>
	
	<select id="selectBucketlistByBucketlistId" parameterType="int" resultMap="bucketlistMap">
		<include refid="selectBucketlist" />
		WHERE bucketId=#{bucketlistId}
	</select>

	<select id="selectBucketlistsByConnChain" resultMap="bucketlistMap">
		<include refid="selectBucketlist" />
		WHERE bucketId IN (SELECT bucketId
							FROM bucketConn_tb
							WHERE connChain LIKE '%'||#{connChain}||'%')
	</select>
	
	<select id="selectBucketlistsByConnChains" resultMap="bucketlistMap">
		<include refid="selectBucketlist" />
		WHERE bucketId IN (SELECT bucketId
							FROM bucketConn_tb
							WHERE connChain IN <foreach item="connChain" separator="," collection="list" open="(" close=")">
													#{connChain}
											    </foreach> )
	</select>
	
	<select id="selectConnChainsByBucketlistId" parameterType="int" resultType="String">
		SELECT connChain
		FROM bucketConn_tb
		WHERE bucketId=#{bucketlistId}
	</select>
</mapper>
